@{
}

@model Book

<div class="card m-1 p-1">
    <h4>
        <span class="badge rounded-pill bg-primary text-white">@Model.Title</span>
    </h4>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Classification (Category): @Model.Classification (@Model.Category)</li>
        <li>Page Number: @Model.PageCount</li>
        <li>Price: $@Model.Price</li>
    </ul>

    <form id="@Model.BookId" method="post" asp-page="/Cart">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
		<button type="submit" class="btn-outline-success btn-sm float-end">Donate</button>
    </form>
    
</div>